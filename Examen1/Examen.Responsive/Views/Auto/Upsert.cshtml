@model Auto

@{
	var titulo = "Crear Auto";
}

<style>
	body {
		background: -webkit-linear-gradient(left, #343a40,#3d444a,#363a3c, #3e4548, #3e4548, #363a3c, #3d444a, #343a40);
	}

</style>


<div class="text-center row justify-content-center col-12 bg-dark " style="margin-top: 12%;">

	<article class="card-body col-9 offset-2">
		<form method="post">
			<div class="text-light">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				@if (Model.Id > 0)
				{
					titulo = "Editar Auto";
				}
				<div class=" border-bottom col-9">
					<h2 class="text-light">@titulo</h2>
				</div>
				<div class=" pt-4">

					<div class="form-group row ">
						<div class="col-3">
							<label asp-for="Placa"></label>
						</div>
						<div class="col-6">
							<input asp-for="Placa" class="form-control bg-secondary text-light" />
							<span asp-validation-for="Placa" class="text-danger"></span>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-3">
							<label asp-for="Modelo"></label>
						</div>
						<div class="col-6">
							<input asp-for="Modelo" class="form-control bg-secondary text-light" />
							<span asp-validation-for="Modelo" class="text-danger"></span>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-3">
							<label asp-for="Annio"></label>
						</div>
						<div class="col-6">
							<input asp-for="Annio" class="form-control bg-secondary text-light" />
							<span asp-validation-for="Annio" class="text-danger"></span>
						</div>
					</div>

			
					<div class="form-group row">
						<div class="col-3">
							<label asp-for="Precio"></label>
						</div>
						<div class="col-6">
							<input asp-for="Precio" class="form-control bg-secondary text-light" />
							<span asp-validation-for="Precio" class="text-danger"></span>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-4 offset-2 ">
							<div class="row">
								<div class="col">
									<button type="submit" class="btn btn-success form-control">Guardar</button>
								</div>
								<div class="col">
									<a asp-action="Index" class="btn btn-danger form-control">Regresar</a>
								</div>
							</div>
						</div>
					</div>


				</div>
			</div>
		</form>
	</article>
</div>
<script>

@section Scripts
	{
	<partial name="_ValidationScriptsPartial" />
}

